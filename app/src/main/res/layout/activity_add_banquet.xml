<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/texture">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBanquet">

    <TextView
        android:text="Enter Information"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:id="@+id/info"
        />

    <EditText
        android:id="@+id/bname"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:hint="Enter Banquet Name"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textColorHint="#bfbfbf" />

    <EditText
        android:id="@+id/owname"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/bname"
        android:hint="Enter Owner Name"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textColorHint="#bfbfbf" />

    <EditText
        android:id="@+id/owncontact"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/owname"
        android:hint="Enter Owner Contact"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textColorHint="#bfbfbf" />

    <EditText
        android:id="@+id/editTextLatitude"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/owncontact"
        android:hint="Enter Banquet Latitude"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textColorHint="#bfbfbf" />
    <EditText
        android:id="@+id/editTextLongitude"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/editTextLatitude"
        android:hint="Enter Banquet Longitude"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textColorHint="#bfbfbf" />


    <EditText
        android:id="@+id/bancapacity"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/editTextLongitude"
        android:hint="Enter Banquet Capacity"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textColorHint="#bfbfbf" />

    <Button
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:hint="Select Banquet Picture"
        android:layout_centerHorizontal="true"
        android:id="@+id/banPicture"
        android:layout_below="@+id/bancapacity"/>

    <Spinner
        android:id="@+id/spin"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/banPicture"
        android:hint="Enter Banquet Capacity"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textColorHint="#bfbfbf" >


    </Spinner>


    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spin"
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    <Button
        android:id="@+id/addbanquet"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:background="#fe6334"
        android:text="Add Banquet"
        android:textColor="@android:color/background_light" />

</RelativeLayout>
</ScrollView>